@model BolaoNet.MVC.ViewModels.Users.LoginViewModel

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">

                @*<h3><i class="fa fa-user fa-4x"></i></h3>*@

                <div class="panel-heading">
                    <h3 class="panel-title">Por favor, entre com as credenciais</h3>
                </div>
                <div class="panel-body">
                    @using(Html.BeginForm("Login", "Access", FormMethod.Post, new {}))
                    {
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(a => a.UserName, new { @class="form-control", @placeholder="Usuário"})
                                @*@Html.ValidationMessageFor(a => a.UserName)*@                                
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(a => a.Password, new { @class = "form-control", @placeholder = "Senha" })
                                @*@Html.ValidationMessageFor(a => a.Password)*@                       
                            </div>
                            <div class="checkbox">
                                <label>                                    
                                    @Html.CheckBoxFor(a => a.RememberMe, new {}) Lembrar-me                                    
                                </label>
                            </div>        
                            
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                                                                                     
                            <input type="submit" value="Login" class="btn btn-lg btn-success btn-block" />

                            <div class="row omb_row-sm-offset-12">
                                <div class="col-xs-12 col-sm-6">
                                    <p class="pull-left">
                                        @Html.ActionLink("Esqueceu a senha?", "ForgotPassword")
                                    </p>
                                </div>
                                <div class="col-xs-12 col-sm-6">
                                    <p class="pull-right">
                                        @Html.ActionLink("Registrar usuário", "RegistrationForm")
                                    </p>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

