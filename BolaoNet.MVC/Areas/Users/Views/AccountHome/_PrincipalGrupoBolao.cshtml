@model IList<BolaoNet.MVC.ViewModels.Users.PaginaPrincipal.PaginaPrincipalGrupoComparacaoModelView>

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h3>Grupo de comparação</h3>
    </div>
    <div class="ibox-content" style="display: block;">
        <div class="row">
            @if(Model.Count > 0)
            { 
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor( x => x[0].PosicaoIndividual)</td>
                        <td>@Html.DisplayNameFor( x => x[0].Posicao)</td>
                        <td></td>
                        <td></td>
                        <td>@Html.DisplayNameFor(x => x[0].UserName)</td>                        
                        <td>@Html.DisplayNameFor(x => x[0].TotalPontos)</td>                        
                    </tr>
                </thead>
                <tbody>

                    @for (int c = 0; c < Model.Count; c++)
                    {
                        <tr>
                            <td>@Model[c].PosicaoIndividual</td>
                            <td>@Model[c].Posicao</td>
                            <td>
                                @if (Model[c].Posicao == Model[c].LastPosicao)
                                {
                                    @Html.Raw("<span class=\"glyphicon glyphicon-stop black\">&nbsp;&nbsp;</span>");
                                }
                                else if (Model[c].Posicao < Model[c].LastPosicao)
                                {
                                    @Html.Raw("<span class=\"glyphicon glyphicon-arrow-up blue\">&nbsp;" + (Model[c].LastPosicao - Model[c].Posicao) + "</span>");

                                }
                                else
                                {
                                    @*<span class="glyphicon glyphicon-arrow-down ">*@
                                    @Html.Raw("<span style=\"color:red\" class=\"glyphicon glyphicon-arrow-down \">&nbsp;" + (Model[c].Posicao - Model[c].LastPosicao) + "</span>");
                                }

                            </td>
                            <td>
                                <img class="img-username" src="/Content/img/database/profiles/@(Model[c].UserName).gif?time=@(DateTime.Now)" />
                            </td>
                            <td>@Model[c].UserName</td>                            
                            <td>@Model[c].TotalPontos</td>                            
                        </tr>
                    }                    
                </tbody>
            </table>
            }
            
            <div class="row">
                <div class="col-sm-offset-4 col-sm-2 text-center">
                    <input type="submit" class="btn btn-default btn-sm right " onclick="javascript:showWait();" value=" configurar" />                    
                </div>
            </div>
        </div>
    </div>
</div>