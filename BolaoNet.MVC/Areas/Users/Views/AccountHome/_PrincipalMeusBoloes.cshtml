@model IList<BolaoNet.MVC.ViewModels.Users.PaginaPrincipal.PaginaPrincipalBolaoPosicoesViewModel>

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h3>Meus Bolões</h3>
    </div>
    <div class="ibox-content" style="display: block;">
        <div class="row">
            @if(Model.Count > 0)
            { 
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor( x => x[0].NomeBolao)</td>
                        <td>@Html.DisplayNameFor( x => x[0].NomeCampeonato)</td>
                        <td>@Html.DisplayNameFor(x => x[0].Membros)</td>
                        <td>@Html.DisplayNameFor(x => x[0].Position)</td>
                        <td>@Html.DisplayNameFor(x => x[0].ApostasRestantes)</td>
                    </tr>
                </thead>
                <tbody>

                    @for (int c = 0; c < Model.Count; c++)
                    {
                        <tr>
                            <td>
                                @*<a href="#">
                                    @Model[c].NomeBolao
                                </a>*@
                                @Model[c].NomeBolao 
                            </td>
                            <td>
                                @*<a href="#">
                                    @Model[c].NomeCampeonato
                                </a>*@
                                @Model[c].NomeCampeonato
                            </td>
                            <td>@Model[c].Membros</td>
                            <td>@Model[c].Position</td>
                            <td>
                                @*<a href="/Apostas/ApostasJogos/Jogos">
                                    @Model[c].ApostasRestantes
                                </a>*@
                                @Model[c].ApostasRestantes
                            </td>
                        </tr>
                    }                    
                </tbody>
            </table>
            }
        </div>
    </div>
</div>