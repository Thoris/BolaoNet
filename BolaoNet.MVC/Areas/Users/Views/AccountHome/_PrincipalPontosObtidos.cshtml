@model IList<BolaoNet.MVC.ViewModels.Users.PaginaPrincipal.PaginaPrincipalPontosObtidosViewModel>

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h3>Pontos Obtidos</h3>
    </div>
    <div class="ibox-content" style="display: block;">
        <div class="row">
            @if(Model.Count > 0)
            { 
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(x => x[0].JogoId)</th>
                        <td class="hidden-xs">@Html.DisplayNameFor(x => x[0].DataJogo)</td>
                        <td class="text-right hidden-xs">@Html.DisplayNameFor(x => x[0].NomeTime1)</td>
                        <td></td>
                        <td class="hidden-xs">@Html.DisplayNameFor(x => x[0].GolsTime1)</td>
                        <td class="hidden-xs"></td>
                        <td class="hidden-xs">@Html.DisplayNameFor(x => x[0].GolsTime2)</td>
                        <td></td>
                        <td class="text-left hidden-xs">@Html.DisplayNameFor(x => x[0].NomeTime2)</td>
                        <td class="text-center" colspan="3">Apostas</td> 
                        <td>@Html.DisplayNameFor(x => x[0].Pontos)</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>

                    @for (int c = 0; c < Model.Count; c++)
                    {
                        <tr>
                            <th>@Model[c].JogoId</th>
                            <td class="hidden-xs">@Model[c].DataJogo.ToString("dd/MM/yy HH:mm")</td>
                            <td class="text-right hidden-xs">@Model[c].NomeTime1</td>
                            <td><img class="img-time" src="@Model[c].ImageTime1"></td>
                            <td class="hidden-xs">@Model[c].GolsTime1</td>
                            <td class="hidden-xs">x</td>
                            <td class="hidden-xs">@Model[c].GolsTime2</td>
                            <td ><img class="img-time" src="@Model[c].ImageTime2"></td>
                            <td class="text-left hidden-xs">@Model[c].NomeTime2 </td>
                            <td><strong>@Model[c].ApostaTime1</strong></td>
                            <td>x</td>
                            <td><strong>@Model[c].ApostaTime2</strong></td>
                            
                            <td class="text-center">
                                @if(Model[c].Pontos != 0)
                                { 
                                    <i class="fa fa-plus-circle" 
                                        style="color:@BolaoNet.MVC.Helpers.ColorPontosHelper.GetColorPontos(Model[c].Pontos)" 
                                        aria-hidden="true"></i>
                                }
                                <strong style="color:@BolaoNet.MVC.Helpers.ColorPontosHelper.GetColorPontos(Model[c].Pontos)">
                                    @(Model[c].Pontos)
                                </strong>


                            </td>
                            <td>
                                <a href="@Url.Action("Index", "ApostasJogo", new { area= "Boloes", id = @Model[c].JogoId})">
                                    <span class="glyphicon glyphicon-list-alt fa-lg"></span>
                                </a>
                            </td>


                            @*<td>
                                <a href="@Url.Action("Action", "Controller")" class="btn btn-secondary btn-sm">
                                    <span class="glyphicon glyphicon-plus-sign"></span>
                                </a>
                            </td>*@
                        </tr>
                    }                    
                </tbody>
            </table>
            }
        </div>
    </div>
</div>