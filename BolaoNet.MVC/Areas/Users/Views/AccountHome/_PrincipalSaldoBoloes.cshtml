@model IList<BolaoNet.MVC.ViewModels.Users.PaginaPrincipal.PaginaPrincipalBolaoSaldoDevedorViewModel>

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h3>Saldo de Pagamentos</h3>
    </div>
    <div class="ibox-content" style="display: block;">
        <div class="row">
            @if(Model.Count > 0)
            { 
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor( x => x[0].NomeBolao)</td>
                        <td>@Html.DisplayNameFor( x => x[0].DataInicio)</td>
                        <td>@Html.DisplayNameFor(x => x[0].Valor)</td>                        
                    </tr>
                </thead>
                <tbody>

                    @for (int c = 0; c < Model.Count; c++)
                    {
                        <tr>
                            <td>@Model[c].NomeBolao</td>
                            <td>@Model[c].DataInicio</td>
                            @*<td>@Html.DisplayFor(model => @model[c].DataInicio, "{0:dd/MM/yyyy}")</td>*@
                            <td>@Model[c].Valor</td>                            
                        </tr>
                    }                    
                </tbody>
            </table>
            }
        </div>
    </div>
</div>