@model IList<BolaoNet.MVC.ViewModels.Campeonatos.CampeonatoHistoricoViewModel>
@{
    ViewBag.Title = "Histórico do Campeonato";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @*<div class="wrapper wrapper-content animated fadeInRight">*@
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content" style="display: block;">
                        <div class="text-center m-t-lg">

                            <div class="row">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <td>Ano</td>    
                                            <td class="hidden-xs">Sede</td>                                        
                                            <td>Campeão</td>
                                            <td></td>
                                            <td>Gols</td>
                                            <td>PT</td>
                                            <td>PT</td>
                                            <td>Gols</td>
                                            <td></td>
                                            <td class="hidden-xs">Vice-Campeão</td>
                                            @*<td></td>
                                            <td>Terceiro</td>*@                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int c = 0; c < Model.Count; c++)
                                        {
                                            <tr>
                                                <td>@Model[c].Ano</td>
                                                <td class="hidden-xs">@Model[c].Sede</td>
                                                <td>@Model[c].NomeTimeCampeao</td>
                                                <td><img class="img-time" src="@Model[c].ImageTimeCampeao" /></td>
                                                <td>@Model[c].FinalTime1</td>
                                                <td>@Model[c].FinalPenaltis1</td>
                                                <td>@Model[c].FinalPenaltis2</td>
                                                <td>@Model[c].FinalTime2</td>
                                                <td><img class="img-time" src="@Model[c].ImageTimeVice" /></td>
                                                <td class="hidden-xs">@Model[c].NomeTimeVice</td>
                                                @*<td><img src="@Model[c].ImageTimeTerceiro" /></td>
                                                <td>@Model[c].NomeTimeTerceiro</td>*@
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>       
    @*</div>*@
}
@section scripts
{
    <script>

    </script>
}