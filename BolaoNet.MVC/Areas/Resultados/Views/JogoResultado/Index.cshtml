@model BolaoNet.MVC.ViewModels.Resultados.JogoResultadoViewModel
@{
    ViewBag.Title = "Jogo do Campeonato";
}
@using (Html.BeginForm("Salvar", "JogoResultado", FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()
    
    @Html.HiddenFor( x => x.NomeCampeonato)
    @Html.HiddenFor( x => x.JogoId)
    @Html.HiddenFor( x => x.IsDesempate)

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">

            @if (!string.IsNullOrEmpty (Model.Mensagem))
            { 
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h2>@Model.Mensagem</h2>
                        </div>
                    </div>
                </div>
            }


            <div class="col-lg-8">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h3>Jogo</h3>
                    </div>
                    <div class="ibox-content" style="display: block;">

                        <div class="row">
                            <div class="form-group col-md-6 col-sm-6">
                                <label>Fase:</label> @Model.NomeFase
                            </div>
                            <div class="form-group col-md-3 col-sm-3">
                                <label>Grupo:</label> @Model.NomeGrupo
                            </div>
                            <div class="form-group col-md-3 col-sm-3">
                                <label>Rodada:</label> @Model.Rodada
                            </div>
                        </div>
                        <div class="row text-center">
                            <div class="form-group col-md-2 col-sm-2">
                                <h3>
                                    @Model.NomeTime1
                                </h3>
                            </div>
                            <div class="form-group col-md-1 col-sm-1 ">
                                <img src="@(Model.ImageTime1)" width="100%" />
                            </div>
                            <div class="form-group col-md-2 col-sm-2">
                                @Html.TextBoxFor(x => x.GolsTime1, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.GolsTime1)
                            </div>
                            <div class="form-group col-md-1 col-sm-1 text-center">
                                x
                            </div>
                            <div class="form-group col-md-2 col-sm-2">
                                @Html.TextBoxFor(x => x.GolsTime2, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.GolsTime2)
                            </div>
                            <div class="form-group col-md-1 col-sm-1">
                                <img src="@(Model.ImageTime2)" width="100%" />
                            </div>
                            <div class="form-group col-md-2 col-sm-2">
                                <h3>
                                    @Model.NomeTime2
                                </h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 text-center">
                                <label>Data do Jogo</label>
                            </div>
                            <div class="col-sm-12 text-center">
                                @Model.DataJogo
                            </div>
                        </div>


                        <div class="login-erro">
                            @Html.ValidationSummary(true)
                        </div>
                    </div>

                </div>
            </div>

            @if(Model.IsDesempate == true)
            { 
                <div class="col-lg-4">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Penaltis</h5>
                        </div>
                        <div class="ibox-content" style="display: block;">
                            <div class="row text-center">
                                <div class="col-sm-3 col-xs-offset-1">
                                    @Html.TextBoxFor(x => x.PenaltisTime1, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.PenaltisTime1)
                                </div>
                                <div class="col-sm-2 col-xs-offset-1 text-center">x</div>
                                <div class="col-sm-3 col-xs-offset-1">
                                    @Html.TextBoxFor(x => x.PenaltisTime2, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.PenaltisTime2)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.IsValido)
            { 
                <div class="col-lg-4">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Dados de Validação</h5>
                        </div>
                        <div class="ibox-content" style="display: block;">
                            <div class="row">
                                <div class="form-group col-md-6 col-sm-6">
  
                                    @Html.Label("Validado por: ")
                                    @Model.ValidadoBy


                                </div>

                                <div class="form-group col-md-6 col-sm-6">
                                    <label>Data de Validação : </label>@Model.DataValidacao
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
            <div class="row">


                <div class="col-sm-offset-5 col-sm-2 text-center">
                    <input type="submit" class="btn btn-primary btn-lg center-block " value="Salvar" />
                </div>
            </div>
        </div>
    </div>
}