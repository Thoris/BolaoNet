@model IList<BolaoNet.MVC.ViewModels.Pagamentos.PagamentoViewModel>
@{
    ViewBag.Title = "Pagamentos do Bolão";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">

        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h3>Pagamentos Efetuados</h3>
                </div>
                <div class="ibox-content" style="display: block;">

                    <div class="row">
                        <div class="col-xs-2">
                            <div class="form-group">

                                <a href="@Url.Action("Create")" class="btn btn-default btn-sm center-block">Criar Novo</a>
                                
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        @if(Model.Count > 0)
                        {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <td></td>
                                    <td>@Html.DisplayNameFor(model => model[0].UserName)</td>
                                    <td>@Html.DisplayNameFor(model => model[0].Valor)</td>
                                    <td>@Html.DisplayNameFor(model => model[0].DataPagamento)</td>
                                    <td>@Html.DisplayNameFor(model => model[0].TipoPagamentoDescricao)</td>
                                    <td>@Html.DisplayNameFor(model => model[0].Descricao)</td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int c = 0; c < Model.Count; c++)
                                {

                                    <tr>
                                        <td>
                                            <img class="img-username" src="/Content/img/database/profiles/@(Model[c].UserName).gif" />
                                        </td>
                                        <td>@Html.DisplayFor(model => model[c].UserName)</td>
                                        <td>@Html.DisplayFor(model => model[c].Valor)</td>
                                        <td>@Html.DisplayFor(model => model[c].DataPagamento)</td>
                                        <td>@Html.DisplayFor(model => model[c].TipoPagamentoDescricao)</td>
                                        <td>@Html.DisplayFor(model => model[c].Descricao)</td>

                                        <td>

                                            <a href="@Url.Action("Edit", "Gerenciamento", new 
                                                {
                                                    dataPagamento = Model[c].DataPagamento,
                                                    nomeBolao = Model[c].NomeBolao,
                                                    userName = Model[c].UserName
                                                })">
                                                <span class="glyphicon glyphicon-edit"></span>
                                            </a>
                                            |
                                            <a href="@Url.Action("Delete", "Gerenciamento", new
                                                {
                                                    dataPagamento = Model[c].DataPagamento,
                                                    nomeBolao = Model[c].NomeBolao,
                                                    userName = Model[c].UserName
                                                })" onclick="return confirm('Deseja remover o pagamento selecionado?');">
                                                <span class="glyphicon glyphicon-remove"></span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        }
                        else
                        {
                            <h3>Não foram encontrados pagamentos para este bolão</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



