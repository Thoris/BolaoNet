@model BolaoNet.MVC.ViewModels.LogReporting.LogReportingViewModel
@{
    ViewBag.Title = "Visualização de Logs";
} 



<div class="wrapper wrapper-content animated fadeInRight">


    @*<div class="row">

        <div class="col-ld-12">

            <div class="col-xs-5">
                <div class="form-group">
                    <div class="input-group">

                        teste
                        stes
                        teste
                    </div>
                </div>
            </div>
        </div>
    </div>*@


    <div class="row">

        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title"> 
                    <div class="row">
                        <div class="col-lg-4">
                            @Html.TextBoxFor(m => m.Identity, new { @class = "form-control", @placeholder = "Identity" })
                        </div>
                        <div class="col-lg-3 ">

                            @Html.DropDownListFor(model => model.Level, new SelectList(
                          new List<Object>{
                               new { value = 0, text = "FATAL"  },
                               new { value = 1 , text = "ERROR" },
                               new { value = 2 , text = "WARN" },
                               new { value = 3 , text = "INFO" },
                               new { value = 4 , text = "DEBUG" },
                               new { value = 5 , text = "ALL" }
                            }, "value", "text", "Level"), new { @id = "Level", @class = "form-control input-sm" })

                        </div>
                        <div class="col-lg-4">
                            @Html.DropDownListFor(model => model.Period, new SelectList(
                          new List<Object>{
                               new { value = 0, text = "Today"  },
                               new { value = 1 , text = "Yesterday" },
                               new { value = 2 , text = "This Week" },
                               new { value = 3 , text = "Last Week" },
                               new { value = 4 , text = "This Month" },
                               new { value = 5 , text = "Last Month" },
                               new { value = 6 , text = "Last 30 Days" },
                               new { value = 7 , text = "Last 60 Days" },
                               new { value = 8 , text = "Last 90 Days" }
                            }, "value", "text", "Period"), new { @id = "Period", @class = "form-control input-sm" })
                        </div>
                        <div class="col-lg-1">

                            <input type="submit" onclick="javascript:showWait();" value="Filtrar" class="btn btn-default" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            Total items xxx

                        </div>
                        <div class="col-lg-9">

                            @Html.DropDownListFor(model => model.TotalItemsPage, new SelectList(
                                new List<Object>{
                               new { value = 0, text = "10"  },
                               new { value = 1 , text = "15" },
                               new { value = 2 , text = "20" },
                               new { value = 3 , text = "25" },
                               new { value = 4 , text = "50" },
                               new { value = 5 , text = "100" }, 
                            }, "value", "text", "TotalItemsPage"), new { @id = "TotalItemsPage", @class = "form-control input-sm" })

                        </div>
                    </div>
                </div>
                <div class="ibox-content" style="display: block;">

                    <div class="row">
                        <div class="col-xs-2">
                            <div class="form-group">

                                

                            </div>
                        </div>
                    </div>

                    <div class="row">
                        @if (Model.List != null && Model.List.Count > 0)
                        {
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <td></td>
                                        <td>@Html.DisplayNameFor(model => model.List[0].Id)</td> 
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int c = 0; c < Model.List.Count; c++)
                                    {
                                        <tr>
                                            <td></td>
                                            <td>@Html.DisplayFor(model => model.List[c].Id)</td>                                            
                                            <td></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <h3>Não foram encontrados logs</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




 