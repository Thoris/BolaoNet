@model IList<BolaoNet.MVC.ViewModels.Admin.UserProfileViewModel>
@{
    ViewBag.Title = "Gerenciamento de Usuários";
} 
<div class="row">

    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h3>Usuários</h3>
            </div>
            <div class="ibox-content" style="display: block;">

                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            <a href="@Url.Action("Create")" class="btn btn-default btn-sm center-block">Novo</a>
                        </div>
                    </div>
                </div>

                <div class="row">
                    @if (Model.Count > 0)
                    {
                        <table class="table table-hover">
                            <caption>Usuários</caption>
                            <thead>
                                <tr>
                                    <td></td>
                                    <td>@Html.DisplayNameFor(model => model[0].UserName)</td>
                                    <td>@Html.DisplayNameFor(model => model[0].FullName)</td>
                                    <td class="hidden-xs">@Html.DisplayNameFor(model => model[0].Email)</td>                                        
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int c = 0; c < Model.Count; c++)
                                {
                                    <tr>
                                        <td>
                                            <img class="img-username" src="/Content/img/database/profiles/@(Model[c].UserName).gif" alt="User name" />
                                        </td>
                                        @*<td>@Html.DisplayFor(model => model[c].UserName)</td>*@

                                        <td>
                                            <a href="@Url.Action("Details", "User", new
                                                    {
                                                        userName = Model[c].UserName
                                                    })">
                                                @Html.DisplayFor(model => model[c].UserName)
                                            </a>
                                        </td>
                                        <td>@Html.DisplayFor(model => model[c].FullName)</td>
                                        <td class="hidden-xs">@Html.DisplayFor(model => model[c].Email)</td>
                                            
                                        <td>                                                
                                            <a href="@Url.Action("Edit", "User", new
                                                    {
                                                        userName = Model[c].UserName
                                                    })">
                                                    <span class="glyphicon glyphicon-edit fa-lg"></span>
                                                </a>    
                                                
                                            @if (string.Compare (Model[c].UserName, base.User.Identity.Name, true) != 0)
                                            {                                                 
                                            <a href="@Url.Action("Delete", "User", new
                                                    {
                                                        userName = Model[c].UserName
                                                    })" onclick="return confirm('Deseja remover o usuário selecionado?');">
                                                <span class="glyphicon glyphicon-remove fa-lg"></span>
                                            </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <h3>Não existem usuários cadastrados</h3>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 



