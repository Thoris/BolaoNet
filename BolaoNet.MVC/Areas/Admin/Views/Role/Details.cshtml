        $(document).ready(function () {
            $('#SelectedUserName').change(function () {
                var data = $(this).val();


                if (data == '') {
                    $('#AddUserName').prop('disabled', true);
                } else {
                    $('#AddUserName').prop('disabled', false);
                }

