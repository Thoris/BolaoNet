@model System.Web.Mvc.HandleErrorInfo
@using Res = BolaoNet.MVC.Resources.Views.Shared.Error
@{
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}
 

<div class="row">
    <div class="col-lg-12">
        <div class="text-center m-t-lg">
            <h1 class="text-danger"><i class="fa fa-times-circle fa-2x"></i></h1>
            <h1 class="text-danger">@Res.ErrorInfo</h1>
            <h2 class="text-danger">@Res.ErrorDescription</h2>
            <p />
            <h2><a href="~/Users/AccountHome/Index">Voltar</a></h2>



            @if(Model != null)
            { 
                <h3>@Res.Details</h3>
                <p>@Res.Controller: @Model.ControllerName</p>
                <p>@Res.Action: @Model.ActionName</p>
                <h4 class="text-danger">@Res.Message: @Model.Exception.Message</h4>
                <p>@Res.StackTrace:</p>
                <pre>@Model.Exception.StackTrace</pre>
            }
        </div>
    </div>
</div>

 