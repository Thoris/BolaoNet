@model BolaoNet.MVC.ViewModels.Account.ForgotPasswordViewModel


@{
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

@*<hr>
<div class="container">*@
    <div class="row">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">Esqueceu a senha?</h2>
                            <p>Você pode reinicializar a senha aqui.</p>
                            <div class="panel-body">

                                <form class="form">
                                    <fieldset>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>

                                                <input id="emailInput" placeholder="endereço de email" class="form-control" type="email" oninvalid="setCustomValidity('Por favor, entre com um email válido!')" onchange="try{setCustomValidity('')}catch(e){}" required="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input class="btn btn-lg btn-primary btn-block" value="Envie minha senha" type="submit">
                                        </div>
                                    </fieldset>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@*</div>*@